# Ktlint uses some properties defined by .editorconfig, IntelliJ IDEA and custom properties.
# https://pinterest.github.io/ktlint/0.49.0/rules/configuration-ktlint

root = true

[*.{kt,kts}]
# or 2, 8..  use an integer number
indent_size = 4

# or 'tab'
indent_style = space

# or 180, use a positive number to set max line length
max_line_length = off
insert_final_newline = true
