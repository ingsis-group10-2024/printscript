# Ktlint uses some properties defined by .editorconfig, IntelliJ IDEA and custom properties.
# https://pinterest.github.io/ktlint/0.49.0/rules/configuration-ktlint

root = true

[*.{kt,kts}]
indent_size = 4                 # possible values: number (e.g. 2), "unset" (makes ktlint ignore indentation completely)
indent_style = tab              # or "space"
max_line_length = off           # or 180, use a positive number to set max line length
insert_final_newline = true
